# Ansible generated file
*filter
:INPUT ACCEPT [0:0]
:FORWARD ACCEPT [0:0]
:OUTPUT ACCEPT [130:11776]
-A INPUT -m state --state RELATED,ESTABLISHED -j ACCEPT
-A INPUT -p icmp -j ACCEPT
-A INPUT -i lo -j ACCEPT
-A INPUT -p tcp -m state --state NEW -m tcp --dport 22 -j ACCEPT
{% if 'database_servers' in groups and inventory_hostname in groups['database_servers'] %}
# MongoDB
-A INPUT -p tcp -m state --state NEW -m tcp --dport 27017 -j ACCEPT
{% endif %}
{% if 'messenger_servers' in groups and inventory_hostname in groups['messenger_servers'] %}
# Prosody
-A INPUT -p tcp -m state --state NEW -m tcp --dport 5222 -j ACCEPT
{% endif %}
-A INPUT -j REJECT --reject-with icmp-host-prohibited
COMMIT
