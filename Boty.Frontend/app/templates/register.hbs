<div class="page-header">
  <h2>Register a new account</h2>
</div>
<div class="col-md-5">
  {{#each model.errors as |error|}}
    <div class="alert alert-danger" role="alert">
      <strong>Register failed:</strong> {{error.message}}
    </div>
  {{/each}}
  <form {{action "submission" on="submit"}}>
    <div class="form-group">
      <label for="username">User Name:</label>
      {{input type="text" value=model.name class="form-control" placeholder="User Name" id="username" required=true}}
    </div>
    <div class="form-group">
      <label for="password">Password:</label>
      {{input type="password" class="form-control" value=model.password placeholder="Password" id="password" required=true}}
    </div>
    <button type="submit" class="btn btn-primary">Register!</button>
  </form>
</div>
