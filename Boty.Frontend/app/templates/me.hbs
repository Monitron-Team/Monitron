{{#page-header title=model.account.name}}
{{/page-header}}
  {{#if model.account.isAdmin}}
    <span class="label label-primary"><i class="fa fa-star"/> administrator</span>
  {{/if}}
  {{#unless model.account.isAdmin}}
    <span class="label label-default"><i class="fa fa-users"/> user</span>
  {{/unless}}
  {{#if model.account.isDeviceMaker}}
    <span class="label label-warning"><i class="fa fa-industry"/> device manufacturer</span>
  {{/if}}
<h3>Contacts</h3>
{{#action-menu title="New" icon="fa-plus"}}
  <li><a href="#" data-toggle="modal" data-target="#new-user-dialog"><i class="fa fa-user"/> Create new IM user</a></li>
  <li><a href="#" data-toggle="modal" data-target="#pair-device-dialog"><i class="fa fa-plug"/> Pair with a device</a></li>
  <li><a href="#"data-toggle="modal" data-target="#start-netbot-dialog"><i class="fa fa-cloud"/> Start a new NetBot&#8482;</a></li>
{{/action-menu}}
{{contacts-table model=model.contacts}}
{{#modal-dialog
  title="Create new user"
  dialog-id="new-user-dialog"
  on-show=(action "CreateUserDialog_onShow")
  is-form=true
  on-submit=(action "createUser" model)
  as |section|
  }}
  {{#if (eq section "body")}}
    {{error-box errors=errors}}
    <div class="form-group">
      <label for="usename">User Name:</label>
      <div class="input-group">
        {{input type="text" class="form-control" placeholder="username" id="username" required=true}}
        <span class="input-group-addon">@monitron.ddns.net</span>
      </div>
    </div>
    <div class="form-group">
      <label for="password">Password:</label>
      {{input type="password" class="form-control" value=password placeholder="Password" id="password" required=true}}
    </div>
  {{else if (eq section "footer")}}
    <button type="submit" class="btn btn-primary">Create</button>
  {{/if}}
{{/modal-dialog}}
{{#modal-dialog
  title="Pair with a device (TODO)"
  dialog-id="pair-device-dialog"
  on-show=(action "PairDeviceDialog_onShow")
  as |section|
  }}
  {{#if (eq section "body")}}
    <div class="form-group">
      <label for="device_serial">Device Serial:</label>
      {{input type="text" class="form-control" placeholder="xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx" id="device_serial" required=true}}
    </div>
  {{else if (eq section "footer")}}
      <button type="button" class="btn btn-primary">Pair</button>
  {{/if}}
{{/modal-dialog}}
{{#modal-dialog
  title="Start a new NetBot&#8482; (TODO)"
  dialog-id="start-netbot-dialog"
  on-show=(action "StartNetbotDialog_onShow")
  as |section|
  }}
  {{#if (eq section "body")}}
  {{else if (eq section "footer")}}
      <button type="button" class="btn btn-primary">Start</button>
  {{/if}}
{{/modal-dialog}}
