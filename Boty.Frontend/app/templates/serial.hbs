{{page-header title="Add a device serial to inentory"}}



<form {{action "addSerial" model.account on="submit"}}>
  {{#if lastUpload}}
    <div class="alert alert-success">
      <strong>Success!</strong> Plugin was uploaded successfully.
    </div>
  {{/if}}
  {{#if errorMessage}}
    <div class="alert alert-danger" role="alert">{{errorMessage}}</div>
  {{/if}}
  <div class="form-group">
    {{input type="text" value=newSerial class="form-control" placeholder="XXXx-XXX" id="newSerial" required=true}}
  </div>
  <button type="submit" class="btn btn-primary">Add</button>
</form>




<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Serial Key</th><th>1</th>
	</tr>
  </thead>
  <tbody>
{{#each model as |serial|}}
  <tr>
  <td>{{serial.serial_key}}</td>
		<td style="text-align:right;">
      <button class="btn btn-danger btn-xs" {{action "delete_account" account on="click"}}><i class="fa fa-trash"/> Delete</button>
		</td>
	</tr>
{{/each}}
  </tbody>
</table>



