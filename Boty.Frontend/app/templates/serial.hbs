{{#page-header}}
Device Management
{{/page-header}}

{{error-box errors=errors}}
<form {{action "addSerial" model.account on="submit"}}>
  {{#if lastUpload}}
    <div class="alert alert-success">
      <strong>Success!</strong> Plugin was uploaded successfully.
    </div>
  {{/if}}
  {{#if errorMessage}}
    <div class="alert alert-danger" role="alert">{{errorMessage}}</div>
  {{/if}}
  <div class="form-group">
    <label for="newSerial">New Serial:</label>
    {{input type="text" value=newSerial class="form-control" placeholder="" id="newSerial" required=true}}
  </div>
  <button type="submit" class="btn btn-primary">Add new serial</button>
</form>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Serial</th>
	</tr>
  </thead>
  <tbody>
{{#each model.serials as |serial|}}
  {{#if (eq serial.maker.name model.account.name )}}
  <tr>
  <td>{{serial.serial_key}}</td>
	</tr>
  {{/if}}
{{/each}}

  </tbody>
</table>
