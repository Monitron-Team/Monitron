{{#if errorMessage}}
	<div class="alert alert-danger" role="alert">
		<strong>Login failed:</strong> {{errorMessage}}
	</div>
{{/if}}
<form {{action "authenticate" on="submit"}}>
  <div class="form-group">
    <label for="username">User Name:</label>
    {{input type="text" value=identification class="form-control" placeholder="User Name" id="username" required=true}}
  </div>
  <div class="form-group">
    <label for="password">Password:</label>
    {{input type="password" class="form-control" value=password placeholder="Password" id="password" required=true}}
  </div>
  <button type="submit" class="btn btn-primary">Log-In!</button>
</form>
